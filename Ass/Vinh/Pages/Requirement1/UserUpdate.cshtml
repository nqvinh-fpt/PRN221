@page
@model Ha.Pages.Requirement1.UserUpdateModel
<!DOCTYPE html>
<html>
<head>
    <title>Update Profile</title>
</head>
<body>
    <h1>Update Profile</h1>
   
        <form method="post" asp-page="/Requirement1/UserUpdate" asp-route-userId="@Model.User.UserId">
        <div>
            <label for="FullName">Full Name:</label>
            <input type="text" id="FullName" name="FullName" value="@Model.User.FullName" />
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" value="@Model.User.Email" />
        </div>
        <button type="submit">Update</button>
    </form>
</body>
</html>
