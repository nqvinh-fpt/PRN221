@page "/cart"
@model Q2.Pages.Carts.IndexModel
@{
}
@using Q2.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
        }
        .btn-danger:hover {
            background-color: #bd2130;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Product/ListProduct">
            <button class="btn-secondary">List Product</button>
        </a>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tb_conten">
                @{
                    int stt = 1;
                }
                @foreach(OrderDetail item in Model.Carts)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@item.Product.ProductName</td>
                                <td>@item.Product.UnitPrice</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity*item.Product.UnitPrice)</td>
                            <td><a href="/cart?handler=DeleteCart&productId=@item.ProductId" class="btn-danger">Remove</a></td>
                    </tr>
                    stt++;
                }
                
            </tbody>
        </table>
    </div>
</body>
</html>
