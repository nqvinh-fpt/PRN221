@page "/Employee/productss"
@model Q2.Pages.Products.ProductListModel
@{
}
@using Q2.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
        .col-md-3 {
            float: left;
            width: 25%;
        }
        .col-md-9 {
            float: left;
            width: 75%;
        }
        h2 {
            margin-top: 0;
        }
        .list-group {
            list-style: none;
            padding: 0;
        }
        .list-group-item {
            border: 1px solid #ddd;
            margin-bottom: -1px;
        }
        .list-group-item a {
            text-decoration: none;
            display: block;
            padding: 10px;
            color: #333;
        }
        .list-group-item a:hover {
            background-color: #f4f4f4;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/cart"><button>View Cart</button></a>
       
        <div class="row">
            <div class="col-md-3">
                <h2>Category</h2>
                <ul class="list-group">
                    @foreach(Category item in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a href="/productss?idCategory=@item.CategoryId">@item.CategoryName</a>
                        </li>
                    }
                   
                </ul>
            </div>
            <div class="col-md-9">
                <h2>List of Product</h2>
                <table>
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>ProductName</th>
                            <th>Category Name</th>
                            <th>QuantityPerUnit</th>
                            <th>UnitPrice</th>
                            <th>Discontinued</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            //int stt = 1;
                        }
                        @foreach(Product item in Model.Products)
                        {
                            <tr id="@item.ProductId">
                                @*<td>@stt</td>*@
                                <td>@item.ProductName</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.QuantityPerUnit</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.Discontinued</td>
                                <td><a href="/productss?handler=AddToCart&productId=@item.ProductId&idCategory=@Model.CategoryIdSeleted"> 
                                    <Button class="btn-primary"> Add Cart</Button></a>
                                    <a style="margin-left:5px" href="/productss?handler=DeleteProduct&productId=@item.ProductId&idCategory=@Model.CategoryIdSeleted">
                                        <Button class="btn-primary"> Delete Product</Button>
                                    </a>
                                </td>
                            </tr>
                            @*stt++;*@
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/productHubs").build();
        connection.start();
        connection.on("ProductDeleted", (idProduct) => {
            const e = document.getElementById(idProduct);
            e.remove();
        })
    </script>
    
</body>
</html>

